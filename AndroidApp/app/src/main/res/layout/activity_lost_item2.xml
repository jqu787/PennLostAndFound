<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/customborder"
    android:orientation="vertical">

    <TextView
        android:id="@+id/found_item_around3"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_marginHorizontal="4dp"
        android:layout_marginTop="4dp"
        android:background="#8BF44336"
        android:fontFamily="@font/libre_franklin_light"
        android:text="You found:"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="#0A0202"
        android:textSize="16sp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/lostItemCategory"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="4dp"
        android:background="#8BF44336"
        android:fontFamily="@font/libre_franklin_light"
        android:gravity="center"
        android:text="[Lost Item Category]"
        android:textColor="#0A0202"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/lostItemTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="4dp"
        android:background="#8BF44336"
        android:fontFamily="@font/libre_franklin_light"
        android:text="[Lost Date]"
        android:textAlignment="center"
        android:textColor="#0A0202"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/lostItemAround"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_marginHorizontal="4dp"
        android:background="#8BF44336"
        android:fontFamily="@font/libre_franklin_light"
        android:text="[Lost Around]"
        android:textAlignment="center"
        android:textColor="#0A0202"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/textView21"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/colorPrimary"
        android:text="TextView"
        android:textColor="@color/colorPrimary" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:fontFamily="@font/libre_franklin_light"
        android:gravity="center"
        android:text="Enter in a helpful message to \nhelp this user recover their item."
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="16sp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="384dp"
        android:orientation="horizontal">

        <Space
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <EditText
            android:id="@+id/lostItemText"
            android:layout_width="352dp"
            android:layout_height="368dp"
            android:background="@drawable/back"
            android:gravity="top"
            android:hint="Description of where you left the item or how they can meet you."
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColorHint="#808080" />

        <Space
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView25"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_marginBottom="-6dp"
        android:background="@color/colorPrimary"
        android:text="TextView"
        android:textColor="@color/colorPrimary" />

    <Button
        android:id="@+id/sendMessage"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:backgroundTint="@color/colorGreen"
        android:fontFamily="@font/libre_franklin_light"
        android:onClick="onLostItemMessageClick"
        android:text="Send Message"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView26"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_marginTop="-6dp"
        android:background="@color/colorPrimary"
        android:text="TextView"
        android:textColor="@color/colorPrimary" />

</LinearLayout>
