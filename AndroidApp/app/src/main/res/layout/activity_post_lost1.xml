<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/customborder"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView8"
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:background="@color/colorPrimary"
        android:text="TextView"
        android:textColor="@color/colorPrimary" />

    <TextView
        android:id="@+id/lost_item_category"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:background="@color/colorPrimary"
        android:fontFamily="@font/libre_franklin_thin"
        android:text="You lost an item"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="30sp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="44dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="485dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/lost_category_question"
                android:layout_width="223dp"
                android:layout_height="23dp"
                android:layout_weight="1"
                android:fontFamily="@font/libre_franklin_thin"
                android:text="What is it?"
                android:textAlignment="center"
                android:textColor="#070000"
                android:textSize="36sp"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/lost_category_spinner"
                android:layout_width="wrap_content"
                android:layout_height="7dp"
                android:layout_weight="1"
                android:entries="@array/lost_categories" />

            <EditText
                android:id="@+id/lost_other_category"
                android:layout_width="198dp"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:ems="10"
                android:fontFamily="@font/libre_franklin_light"
                android:hint="Type category name"
                android:inputType="textPersonName"
                android:textColor="#000000"
                android:visibility="invisible" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/lost_location_q"
                android:layout_width="wrap_content"
                android:layout_height="67dp"
                android:layout_weight="1"
                android:fontFamily="@font/libre_franklin_thin"
                android:text="Around where do\nyou think it is?"
                android:textAlignment="center"
                android:textColor="#030000"
                android:textSize="36sp"
                android:textStyle="bold" />

            <AutoCompleteTextView
                android:id="@+id/lost_location"
                android:layout_width="226dp"
                android:layout_height="14dp"
                android:layout_weight="1"
                android:ems="10"
                android:hint="Place"
                android:inputType="textPersonName" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

        </LinearLayout>

    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#016C61"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="58dp"
            android:layout_marginHorizontal="2dp"
            android:layout_marginTop="2dp"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:fontFamily="@font/libre_franklin_medium"
            android:onClick="onNextLostClick"
            android:text="@string/next"
            android:textColor="#FFFFFF" />

    </LinearLayout>

</LinearLayout>