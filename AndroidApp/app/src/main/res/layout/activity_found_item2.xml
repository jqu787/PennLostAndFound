<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/customborder"
    android:orientation="vertical">

    <TextView
        android:id="@+id/found_item_around3"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_marginHorizontal="4dp"
        android:layout_marginTop="4dp"
        android:background="@color/colorFound"
        android:fontFamily="@font/libre_franklin_light"
        android:text="You are claiming:"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="#0A0202"
        android:textSize="16sp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/foundItemCategory"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="4dp"
        android:background="@color/colorFound"
        android:fontFamily="@font/libre_franklin_light"
        android:gravity="center"
        android:text="[Found Item Category]"
        android:textColor="#0A0202"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/foundItemTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="4dp"
        android:background="@color/colorFound"
        android:fontFamily="@font/libre_franklin_light"
        android:text="[Found Date]"
        android:textAlignment="center"
        android:textColor="#0A0202"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/foundItemAround"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_marginHorizontal="4dp"
        android:background="#6B0347F4"
        android:fontFamily="@font/libre_franklin_light"
        android:text="[Found Around]"
        android:textAlignment="center"
        android:textColor="#0A0202"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/textView17"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/colorPrimary"
        android:text="TextView"
        android:textColor="@color/colorPrimary" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:fontFamily="@font/libre_franklin_light"
        android:gravity="center"
        android:text="To verify that this is yours, give as much\ndetail as you can about the item:"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="16sp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="387dp"
        android:orientation="horizontal">

        <Space
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <EditText
            android:id="@+id/foundItemText"
            android:layout_width="352dp"
            android:layout_height="371dp"
            android:background="@drawable/back"
            android:gravity="top"
            android:hint="Color, size, recognizable features, etc."
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColorHint="#808080" />

        <Space
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView22"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_marginBottom="-6dp"
        android:background="@color/colorPrimary"
        android:text="TextView"
        android:textColor="@color/colorPrimary" />

    <Button
        android:id="@+id/sendMessage"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:backgroundTint="@color/colorGreen"
        android:fontFamily="@font/libre_franklin_light"
        android:onClick="onSendMessage"
        android:text="Send Message"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView23"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_marginTop="-6dp"
        android:background="@color/colorPrimary"
        android:text="TextView"
        android:textColor="@color/colorPrimary" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="75dp" />

</LinearLayout>